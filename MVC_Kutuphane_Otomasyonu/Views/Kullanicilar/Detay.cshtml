@model MVC_Kutuphane_Otomasyonu.Entities.Model.KullaniciHareketleri

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Kullanıcı Detay Sayfası</b>
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("Detay", "KullaniciHareketleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.KullaniciId)
                        @Html.TextBoxFor(x => x.KullaniciId, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.KullaniciId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Aciklama)
                        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Tarih)
                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", type = "datetime-local", Value = Model.Tarih.ToString("yyyy-MM-ddTHH:mm") })
                        @Html.ValidationMessageFor(x => x.Tarih, "", new { @class = "text-danger" })
                    </div>

                    
                }
            </div>
        </div>
    </div>
</div>
