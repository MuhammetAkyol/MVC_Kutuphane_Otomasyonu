
@model MVC_Kutuphane_Otomasyonu.Entities.Model.Kullanicilar
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Kullıcı Düzenleme Sayfası</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Duzenle", "Kullanicilar", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.DisplayNameFor(x => x.KullaniciAdi)
                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @class = "text-danger" })
                </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Sifre)
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.AdiSoyadi)
                        @Html.TextBoxFor(x => x.AdiSoyadi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdiSoyadi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Telefon)
                        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Telefon, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Adres)
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Adres, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.EMail)
                        @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EMail, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.KayitTarihi)
                        @Html.TextBoxFor(x => x.KayitTarihi, new { @class = "form-control", type = "datetime-local", Value = Model.KayitTarihi.ToString("yyyy-MM-dd HH:mm") })
                        @Html.ValidationMessageFor(x => x.KayitTarihi, "", new { @class = "text-danger" })
                    </div>
                                      
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Duzenle</button>
                    </div>
                }



            </div>

        </div>

    </div>


</div>

