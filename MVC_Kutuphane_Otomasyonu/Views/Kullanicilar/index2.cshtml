
@model MVC_Kutuphane_Otomasyonu.Entities.Model.ViewModel.KullaniciRolViewModel

@{
    ViewBag.Title = "index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Listesi

            </div>
            <div class="ibox-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <td>Kullanıcı</td>
                            <td>Adı Soyadı</td>
                            <td>Telefon</td>
                            <td>E-Mail</td>
                            <td>Kayıt Tarihi</td>
                            <td>İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kullanici in Model.kullanicilar)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => kullanici.Id)</th>
                                <th class="dropdown-btn">@Html.DisplayFor(x => kullanici.KullaniciAdi)</th>
                                <td class="dropdown-container">
                                    <ul style="list-style-type:none">
                                        @foreach (var rol in kullanici.kullaniciRolleri)
                                        {
                                            <li>
                                                <div style="float:left;margin-top:8px">
                                                    @rol.Roller.Rol &nbsp;

                                                </div>
                                                <div style="float:right;margin-top:4px">
                                                    @Html.ActionLink("Düzenle", "Duzenle", "KullaniciRolleri", new { id = rol.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                                    @Html.ActionLink("Sil", "Sil", "KullaniciRolleri", new { id = rol.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt Silinsin Mi?')" })
                                                </div>
                                            </li>
                                        }

                                        @Html.ActionLink("Yeni", "Ekle","KullaniciRolleri", new { id = kullanici.Id }, new { @class = "btn btn-success btn-sm", style="margin-top:8px" }) 


                                    </ul>

                                </td>



                                <td>@Html.DisplayFor(x => kullanici.AdiSoyadi)</td>
                                <td>@Html.DisplayFor(x => kullanici.Telefon)</td>
                                <td>@Html.DisplayFor(x => kullanici.EMail)</td>
                                <td>@Html.DisplayFor(x => kullanici.KayitTarihi)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = kullanici.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil", "Kullanicilar", new { id = kullanici.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt Silinsin Mi?')" }) |

                                </td>
                            </tr>
                        }

                    </tbody>


                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })

                </div>
            </div>



        </div>

    </div>

</div>

<link href="~/style.css" rel="stylesheet" />
<script src="~/JavaScript.js"></script>

