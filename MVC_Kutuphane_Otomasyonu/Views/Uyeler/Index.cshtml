
@model IEnumerable<MVC_Kutuphane_Otomasyonu.Entities.Model.Uyeler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Üyeler

            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <td>Ad Soyad</td>
                            <td>Telefon</td>
                            <td>Adres</td>
                            <td>Email</td>
                            <td>Resim</td>
                            <td>Tarih</td>
                            <td>İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => item.Id)</th>
                                <td>@Html.DisplayFor(x => item.AdiSoyadi)</td>
                                <td>@Html.DisplayFor(x => item.Telefon)</td>
                                <td>@Html.DisplayFor(x => item.Adres)</td>
                                <td>@Html.DisplayFor(x => item.EMail)</td>
                                <td>@Html.DisplayFor(x => item.KayitTarihi)</td>
                                <td><img src="@item.Resim" width="100" height="100" /></td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                     @Html.ActionLink("Sil", "Sil", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt Silinsin Mi?')" })

                                </td>
                            </tr>
                        }

                    </tbody>


                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })

                </div>
            </div>



        </div>

    </div>

</div>

