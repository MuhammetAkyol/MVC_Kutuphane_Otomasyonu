
@model MVC_Kutuphane_Otomasyonu.Entities.Model.Uyeler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Üye Ekleme Sayfası</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Ekle", "Uyeler", FormMethod.Post, new { enctype = "multipart/form-data"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                   
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.AdiSoyadi)
                        @Html.TextBoxFor(x => x.AdiSoyadi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.AdiSoyadi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Telefon)
                        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Telefon, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Adres)
                        @Html.TextAreaFor(x => x.Adres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Adres, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.EMail)
                        @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EMail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.OkuKitapSayisi)
                        @Html.TextBoxFor(x => x.OkuKitapSayisi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.OkuKitapSayisi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Resim)
                        @Html.TextBoxFor(x => x.Resim, new { @class = "form-control",  type="file"})
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.KayitTarihi)
                        @Html.TextBoxFor(x => x.KayitTarihi, new { @class = "form-control", type="DateTime-local"})
                        @Html.ValidationMessageFor(x => x.KayitTarihi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Ekle</button>
                    </div>
                }



            </div>

        </div>

    </div>


</div>

